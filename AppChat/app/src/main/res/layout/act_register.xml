<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <Button
        android:id="@+id/bt_rgt_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/borda"
        android:backgroundTint="#8BC34A"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@id/edt_rgt_name"
        android:text="Imagem"
        android:textSize="24sp"
        android:textStyle="bold"
        android:onClick="setBtSelectImage"
        />

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_rgt_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:civ_border_width="3dp"
        app:civ_border_color="#2196F3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@id/edt_rgt_name"
        android:textSize="24sp"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/edt_rgt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/borda"
        android:padding="15dp"
        android:hint="Nome"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/edt_rgt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:padding="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="E-mail"
        android:layout_below="@id/edt_rgt_name"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/act_rgt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@id/edt_rgt_email"
        android:background="@drawable/borda"
        android:padding="15dp"
        android:hint="Password"
        android:inputType="numberPassword"
        />

    <Button
        android:id="@+id/btn_rgt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_rgt_password"
        android:layout_margin="30dp"
        android:padding="15dp"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/borda"
        android:backgroundTint="#4CAF50"
        android:onClick="onRegister"
        />

</RelativeLayout>